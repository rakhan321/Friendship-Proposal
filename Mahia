  <script>
    function nextStep(stepNum) {
      for (let i = 1; i <= 5; i++) {
        document.getElementById('step' + i).style.display = 'none';
      }
      document.getElementById('step' + stepNum).style.display = 'flex';
    }

    // Optional: Automatically go through each step every 12s
    const timings = [0, 12000, 24000, 36000, 48000];
    timings.forEach((time, index) => {
      setTimeout(() => nextStep(index + 1), time);
    });
  </script>

